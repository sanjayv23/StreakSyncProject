<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Streak Sync</title>
</head>
<body>
  <form method="post" action="/login">
    <h1>
      Hello Streak Freak!
    </h1>
    <h2>
      Login Here.
      <% if (error) { %>
        <p class="error-msg" style="color: red;"> <%= error %> </p>
      <% } %>      
    </h2>
    <label for="mail"></label>
    <input type="email" id="mail" name="mail" placeholder="E-Mail" required>
    <label for="password"></label>
    <input type="password" id="password" name="password" placeholder="Password" required>
    <button type="submit">Login</button>
    <p> Dont have an account? <a href="register"> Register Here</a> </p>
  </form>

  <a href="/auth/google" role="button">Login with Google</a>

  <script>
    setTimeout(()=>{
      const ermsg = document.querySelector(".error-msg");
      if(ermsg) ermsg.remove();
    }, 2000);
  </script>
</body>
</html>