<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Streak Sync</title>
</head>
<body>
  <form method="post" action="/register">
    <h1>
      Hello Streak Freak!
    </h1>
    <h2>
      Register Here.
      <% if (error) { %>
        <p class="error-msg" style="color: red;"> <%= error %> </p>
      <% } %>  
    </h2>
    <label for="name"></label>
    <input type="text" id="name" name="name" placeholder="Your Name" required>
    <label for="mail"></label>
    <input type="email" id="mail" name="mail" placeholder="E-Mail" required>
    <label for="password"></label>
    <input type="password" id="password" name="password" placeholder="Password" required>
    <button type="submit">Register</button>
    <p> Already have an account? <a href="login"> Login Here</a> </p>
  </form>
  
  <a href="/auth/google" role="button">Register with Google</a>

  <script>
    setTimeout(()=>{
      const ermsg = document.querySelector(".error-msg");
      if(ermsg) ermsg.remove();
    }, 2000);
  </script>
</body>
</html>